@model loginmodel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - MyApp</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1549921296-3cdb5a8527d7?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
            background-size: cover;
        }

        .login-box {
            max-width: 400px;
            margin: 80px auto;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }

        .btn-primary {
            border-radius: 50px;
            padding: 10px 25px;
        }
    </style>
</head>
<body>

    <div class="login-box">
        <h3 class="text-center mb-4">Honeywell</h3>
        <form method="post" action="/login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="employeeid" class="form-label">Employee ID</label>
                <input asp-for="employeeid" type="text" class="form-control" placeholder="Employee ID" >
                <span asp-validation-for="employeeid" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="password" class="form-label">Password</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Enter password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
               @*  <div>
                    <input type="checkbox" id="rememberMe">
                    <label for="rememberMe" class="form-label">Remember me</label>
                </div> *@
                <a href="#" class="text-decoration-none">Forgot password?</a>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="text-center mt-3">
               @*  <small>Don't have an account? <a href="/register" class="text-primary">Register</a></small> *@
            </div>
        </form>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
