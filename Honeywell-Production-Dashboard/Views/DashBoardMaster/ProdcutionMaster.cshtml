@model CustomerMasterModel
@{
    // ViewData["Title"] = "Customer Master";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @* <title>@ViewData["Title"]</title> *@
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
              @*   <h3>@ViewData["Title"]</h3> *@
              Production Master
            </div>
            <div class="card-body">
              @*   @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                } *@

                <form asp-action="Index" asp-controller="CustomerMaster" method="post">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label  class="form-label fw-semibold">Customer :</label>
                          @*   <select asp-for="Customers" asp-items="Model.Customers" class="dropdown-item-text">
                                <option value="">-- Select Customer --</option>
                            </select> *@
                            @Html.DropDownListFor(a => a.Customer, Model.Customers, new { @id = "ddlcustomers", @class = "form-control" })
                        </div>
                      @*   <div class="col-md-3">
                            <label class="form-label fw-semibold">FG Name</label>
                            <select asp-for="FGNames" class="form-select" asp-items="Model.FGNames" >
                                <option value="">-- Select FG Name --</option>
                               
                            </select>
                        </div> *@
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">FG Name :</label>
                            <select id="ddlFgName" class="form-control">
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Manpower" class="form-label fw-semibold">Manpower</label>
                            <input asp-for="Manpower" class="form-control" placeholder="Enter Manpower" />
                            <span asp-validation-for="Manpower" class="text-danger"></span>
                        </div>
                    </div>

                  @*   <div class="row mb-4">
                     
                    </div> *@

                    <div class="d-grid" style="width:10%;float:right;">
                        <button type="submit" class="btn btn-success shadow">Submit</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>
    $(document).ready({

    });
    $('#ddlcustomers').on('change',function(){
        debugger;
        var Cusid=$('#ddlcustomers').val();
        alert(Cusid);
        $.ajax({
            url:'/DashBoardMaster/getFGNameList',
            type:'Get',
            data:{cusid:Cusid},
            async:false,
            success:function(data)
            {
                  $('#ddlFgName').empty();
                $.each(data,function(index,item)
                {
                    debugger;
                    $('#ddlFgName').append($('<option>',{
                        value:item.value,
                        text:item.text
                    }));
                });
            },
            error:function(error){
                alert(error);
            }
        });
    });
</script>